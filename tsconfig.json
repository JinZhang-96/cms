{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@": ["static"],
      "@/*": ["static/*"],
      "@assets": ["static/assets"],
      "@assets/*": ["static/assets/*"],
      "@core": ["static/common/core"],
      "@core/*": ["static/common/core/*"],
      "@dom": ["static/common/dom"],
      "@dom/*": ["static/common/dom/*"],
      "@interface": ["static/common/interface"],
      "@interface/*": ["static/common/interface/*"],
      "@translate": ["static/common/translate"],
      "@translate/*": ["static/common/translate/*"]
    },
    "lib": [
      "es2017",
      "dom"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}